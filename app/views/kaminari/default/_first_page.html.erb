<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.first? %>
  <span class="btn btn-sm join-item btn-disabled" aria-disabled="true" aria-label="First page">
    <span class="iconify lucide--chevrons-left size-4"></span>
  </span>
<% else %>
  <%= link_to url, class: "btn btn-sm join-item", remote: remote, "aria-label": "First page" do %>
    <span class="iconify lucide--chevrons-left size-4"></span>
  <% end %>
<% end %>