<% content_for :title, "SMM Orders - Whisperer" %>

<div>
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-base-content/60 mb-2">
      <%= link_to root_path, class: "hover:text-base-content transition-colors" do %>
        <span class="block iconify lucide--home size-4"></span>
      <% end %>
      <span class="iconify lucide--chevron-right size-3"></span>
      <span class="text-base-content">SMM Orders</span>
    </div>
    <div>
      <h1 class="text-2xl font-bold">SMM Orders</h1>
      <p class="text-base-content/60 text-sm mt-1">View all SMM panel orders for this project</p>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="bg-base-100 rounded-box border border-base-300 overflow-hidden">
    <% if @orders.empty? %>
      <div class="p-12 text-center">
        <span class="iconify lucide--shopping-cart size-16 text-base-content/30 mx-auto mb-4"></span>
        <h3 class="text-lg font-semibold mb-2">No orders yet</h3>
        <p class="text-base-content/60 mb-6">Orders from your SMM panels will appear here.</p>
        <%= link_to smm_panels_jap_index_path, class: "btn btn-primary gap-2" do %>
          <span class="iconify lucide--settings size-4"></span>
          Configure SMM Panel
        <% end %>
      </div>
    <% else %>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr class="bg-base-200">
              <th>Order ID</th>
              <th>Panel</th>
              <th>Type</th>
              <th>Video</th>
              <th>Status</th>
              <th>Quantity</th>
              <th>Remains</th>
              <th>Charge</th>
              <th>Created</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr class="hover">
                <td>
                  <code class="bg-base-200 px-2 py-1 rounded text-xs"><%= order.external_order_id || "N/A" %></code>
                </td>
                <td>
                  <span class="badge badge-ghost badge-sm"><%= order.smm_panel_credential.display_name %></span>
                </td>
                <td>
                  <span class="badge badge-outline badge-sm gap-1">
                    <% if order.comment? %>
                      <span class="iconify lucide--message-circle size-3"></span>
                      Comment
                    <% else %>
                      <span class="iconify lucide--thumbs-up size-3"></span>
                      Upvote
                    <% end %>
                  </span>
                </td>
                <td>
                  <% if order.video %>
                    <%= link_to order.video.title.truncate(30), video_path(order.video), class: "link link-primary text-sm" %>
                  <% elsif order.link.present? %>
                    <a href="<%= order.link %>" target="_blank" class="link link-primary text-xs">
                      <%= truncate(order.link, length: 35) %>
                    </a>
                  <% else %>
                    <span class="text-base-content/40">-</span>
                  <% end %>
                </td>
                <td>
                  <span class="badge <%= order.status_badge_class %> badge-sm">
                    <%= order.status.humanize %>
                  </span>
                </td>
                <td><%= order.quantity || "-" %></td>
                <td><%= order.remains || "-" %></td>
                <td>
                  <% if order.charge %>
                    <span class="font-mono text-sm"><%= number_with_precision(order.charge, precision: 5) %></span>
                    <span class="text-base-content/60 text-xs"><%= order.currency %></span>
                  <% else %>
                    <span class="text-base-content/40">-</span>
                  <% end %>
                </td>
                <td class="text-sm text-base-content/60">
                  <%= time_ago_in_words(order.created_at) %> ago
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @orders.respond_to?(:total_pages) && @orders.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-base-300">
          <%= paginate @orders %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>