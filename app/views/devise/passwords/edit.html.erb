<% content_for :title, "Change Password - Whisperer" %>

<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
  <div class="card w-full max-w-md bg-base-200 shadow-2xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold text-center justify-center mb-4">Change Your Password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <!-- New Password Field -->
        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">New Password</span>
            <span class="label-text-alt">Minimum 8 characters</span>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="form-control">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm New Password</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>

        <!-- Submit Button -->
        <div class="form-control mt-6">
          <%= f.submit "Change Password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="divider"></div>
      <div class="text-center">
        <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-ghost btn-sm" %>
      </div>
    </div>
  </div>
</div>
