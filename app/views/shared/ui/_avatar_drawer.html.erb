<div class="drawer drawer-end">
  <input id="topbar-profile-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <label
      for="topbar-profile-drawer"
      class="btn btn-ghost flex items-center gap-2 px-1.5">
      <div class="avatar">
        <div class="mask mask-squircle w-8 bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center">
          <span class="text-white text-sm font-semibold">DN</span>
        </div>
      </div>
      <div class="text-start">
        <p class="text-sm/none">Denish</p>
        <p class="text-base-content/50 mt-0.5 text-xs/none">Team</p>
      </div>
    </label>
  </div>
  <div class="drawer-side">
    <label
      for="topbar-profile-drawer"
      aria-label="close sidebar"
      class="drawer-overlay"></label>
    <div class="h-full w-72 p-2 sm:w-84">
      <div class="bg-base-100 rounded-box relative flex h-full flex-col pt-4 sm:pt-8">
        <label
          for="topbar-profile-drawer"
          class="btn btn-xs btn-circle btn-ghost absolute start-2 top-2"
          aria-label="Close">
          <span class="iconify lucide--x size-4"></span>
        </label>
        <div class="flex flex-col items-center">
          <div class="relative">
            <div
              class="avatar isolate size-20 cursor-pointer overflow-hidden rounded-full bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center md:size-24">
              <span class="text-white text-3xl font-semibold md:text-4xl">DN</span>
            </div>
            <div
              class="bg-base-100 absolute end-0 bottom-0 flex items-center justify-center rounded-full p-1.5 shadow-sm">
              <span class="iconify lucide--pencil size-4"></span>
            </div>
          </div>
          <p class="mt-4 text-lg/none font-medium sm:mt-8"><%= current_user.full_name %></p>
          <p class="text-base-content/60 mt-1 text-sm"><%= current_user.email %></p>
          <div class="mt-4 flex items-center gap-2 *:cursor-pointer sm:mt-6">
            <div
              class="avatar size-10 overflow-hidden rounded-full bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center">
              <span class="text-white text-xs font-semibold">JD</span>
            </div>
            <div
              class="avatar size-10 overflow-hidden rounded-full bg-gradient-to-br from-emerald-500 to-teal-500 flex items-center justify-center">
              <span class="text-white text-xs font-semibold">SK</span>
            </div>
            <div
              class="avatar size-10 overflow-hidden rounded-full bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center">
              <span class="text-white text-xs font-semibold">MR</span>
            </div>
            <div
              class="bg-base-200 border-base-300 flex size-10 items-center justify-center rounded-full border border-dashed">
              <span class="iconify lucide--plus size-4.5"></span>
            </div>
          </div>
        </div>
        <div
          class="border-base-300 mt-4 grow overflow-auto border-t border-dashed px-2 sm:mt-6">
          <ul class="menu w-full p-2">
            <li class="menu-title">Account</li>
            <li>
              <a href="#">
                <span class="iconify lucide--user size-4.5"></span>
                <span>View Profile</span>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="iconify lucide--users size-4.5"></span>
                <span>Team</span>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="iconify lucide--mail-plus size-4.5"></span>
                <span>Invites</span>
                <div class="badge badge-sm">4</div>
              </a>
            </li>
            <li class="menu-title">Platform</li>
            <li>
              <a href="#">
                <span class="iconify lucide--settings size-4.5"></span>
                <span>Settings</span>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="iconify lucide--credit-card size-4.5"></span>
                <span>Billing</span>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="iconify lucide--help-circle size-4.5"></span>
                <span>Support</span>
              </a>
            </li>
            <li>
              <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "text-error hover:bg-error/10" do %>
                <span class="iconify lucide--log-out size-4.5"></span>
                <span>Sign Out</span>
              <% end %>
            </li>
          </ul>
        </div>
        <div
          class="rounded-box from-primary to-secondary text-primary-content m-4 mt-auto flex cursor-pointer flex-col items-center justify-center bg-linear-to-br p-4 text-center transition-all hover:opacity-95 sm:p-6">
          <div
            class="bg-primary-content/10 border-primary-content/10 flex items-center justify-center rounded-full border p-1.5 sm:p-2.5">
            <span class="iconify lucide--zap size-5 sm:size-6"></span>
          </div>
          <p
            class="mt-2 font-mono text-[11px] font-medium tracking-wider uppercase opacity-70 sm:mt-4">
            Upgrade your plan
          </p>
          <p class="mt-1 leading-none font-medium sm:text-lg">
            Save
            <span class="font-semibold underline">30%</span>
            today
          </p>
        </div>
      </div>
    </div>
  </div>
</div>