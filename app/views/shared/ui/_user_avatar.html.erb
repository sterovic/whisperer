<div class="dropdown dropdown-bottom dropdown-end">
  <div tabindex="0" class="cursor-pointer">
    <%= render "shared/ui/avatar", name: current_user.first_name, last_name: current_user.last_name %>
  </div>
  <div tabindex="0" class="dropdown-content bg-base-100 rounded-box mt-2 w-44 shadow-sm">
    <ul class="menu w-full p-2">
      <li>
        <%= link_to edit_user_registration_path do %>
          <span class="iconify lucide--user size-4"></span>
          <span>My Profile</span>
        <% end %>
      </li>
      <li>
        <%= link_to settings_project_path do %>
          <span class="iconify lucide--settings size-4"></span>
          <span>Settings</span>
        <% end %>
      </li>
      <li>
        <%= link_to billing_path do %>
          <span class="iconify lucide--credit-card size-4"></span>
          <span>Billing</span>
        <% end %>
      </li>
      <li>
        <details>
          <summary>
            <span class="iconify lucide--sun-moon size-4"></span>
            <span>Appearance</span>
          </summary>
          <ul>
            <li><a data-set-theme="light" class="cursor-pointer"><span class="iconify lucide--sun size-4"></span> Light</a>
            </li>
            <li>
              <a data-set-theme="dark" class="cursor-pointer"><span class="iconify lucide--moon size-4"></span> Dark</a>
            </li>
          </ul>
        </details>
      </li>
      <li>
        <a href="#">
          <span class="iconify lucide--help-circle size-4"></span>
          <span>Help</span>
        </a>
      </li>
    </ul>
    <hr class="border-base-300"/>
    <ul class="menu w-full p-2">
      <li>
        <div>
          <span class="iconify lucide--arrow-left-right size-4"></span>
          <span>Switch Account</span>
        </div>
      </li>
      <li>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "text-error hover:bg-error/10" do %>
          <span class="iconify lucide--log-out size-4.5"></span>
          <span>Sign Out</span>
        <% end %>
      </li>
    </ul>
  </div>
</div>