<%
  type ||= "text"
  placeholder ||= ""
  label ||= nil
  error ||= nil
  value ||= ""
  name ||= ""
  required ||= false
  disabled ||= false
%>

<div class="space-y-1.5">
  <% if label %>
    <label class="block text-sm font-medium text-gray-700">
      <%= label %>
      <% if required %>
        <span class="text-red-500">*</span>
      <% end %>
    </label>
  <% end %>

  <input
    type="<%= type %>"
    name="<%= name %>"
    value="<%= value %>"
    placeholder="<%= placeholder %>"
    <%= "required" if required %>
    <%= "disabled" if disabled %>
    class="w-full px-3 py-2 border <%= error ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500' %> rounded-lg text-sm focus:outline-none focus:ring-2 transition-colors <%= 'bg-gray-50 cursor-not-allowed' if disabled %>">

  <% if error %>
    <p class="text-sm text-red-600"><%= error %></p>
  <% end %>
</div>
