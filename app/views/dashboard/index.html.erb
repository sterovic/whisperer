<% content_for :title, "Dashboard - Whisperer" %>

<% if @current_project.nil? %>
  <!-- Empty State: No Projects -->
  <div class="flex items-center justify-center min-h-[60vh] p-6">
    <div class="text-center max-w-md">
      <div class="bg-base-200 rounded-full p-6 inline-block mb-6">
        <span class="iconify lucide--folder-plus size-16 text-base-content/30"></span>
      </div>
      <h2 class="text-2xl font-bold mb-2">Welcome to Whisperer!</h2>
      <p class="text-base-content/60 mb-6">
        Create your first project to start importing videos and posting comments.
      </p>
      <%= link_to new_project_path, data: { turbo_frame: "modal" }, class: "btn btn-primary btn-lg gap-2" do %>
        <span class="iconify lucide--plus size-5"></span>
        Create Your First Project
      <% end %>
    </div>
  </div>
<% else %>
  <%= render "dashboard/content" %>
<% end %>